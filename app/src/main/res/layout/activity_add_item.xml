<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luc.timetracker.AddItemActivity"
    android:weightSum="1">



    <EditText
        android:id="@+id/add_item"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:layout_weight="0.26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/add_item_tag_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/add_item_tag_spinner_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No tags added"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/add_item_add_tag_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_plus_black_36dp" />
    </LinearLayout>

</LinearLayout>
